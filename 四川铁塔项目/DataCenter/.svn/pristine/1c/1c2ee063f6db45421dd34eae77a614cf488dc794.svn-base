/*TABLE*/
table.dataTable {
	margin: 0 auto;
	clear: both;
	width: 100%;
	font-size: 12px;
	table-layout:fixed; 
	border-collapse:collapse;
	empty-cells:hide;
}

/*����*/
.dataTables_wrapper {
	border: 1px solid #a3d0e3;
	position: relative;
	clear: both; 
	zoom: 1;
}

/*����ͷ*/
table.dataTable thead th {
	padding: 0px;
	font-weight: bold;
	cursor: pointer; *
	cursor: hand;
	height:30px;
	white-space:nowrap;
	text-overflow:ellipsis;
	overflow:hidden;
	
	border-right: 1px solid #a3d0e3; 
	border-bottom : 1px solid #a3d0e3;
	background-color:#deeff8;
	/*background-image: url('images/datatables/header_bg.png');
	background-repeat:repeat-x;
	background-position:top;*/
}

/*TH����*/
.table_title{
	border:0;
	margin:0;
	padding:0;
	white-space:nowrap;
	text-overflow:ellipsis;
	overflow:hidden;
	float:left;
	height: 30px;
	line-height:30px;
	width:90%;
}

/*�޸��п�DIV*/
.table_resize{
	border:0;
	margin:0;
	padding:0;
	cursor:col-resize;
	float:right;
	width:6px;
	height: 30px;
	/*background-color:#F00;*/	
}

/*β��ͷ*/
table.dataTable tfoot th {
	padding: 3px 18px 3px 10px;
	border-top: 1px solid #ddebd8; 
	font-weight: bold;
}

/*ҳ��*/
.bottom {
	border-top: 1px solid #a3d0e3;
	height: 30px;
	font-size: 12px;
	line-height: 30px;
	padding-left: 3px;
}

/*��Ԫ��*/
table.dataTable td {
	padding: 3px 10px;
	border-right: 1px solid #a3d0e3;
	border-bottom: 1px solid #a3d0e3;
	white-space:nowrap;
	text-overflow:ellipsis;
	overflow:hidden;
	height:25px;
}

/*ѡ����*/
.row_selected td {
	background-color: #deeff8;
}

table.dataTable td.center,table.dataTable td.dataTables_empty {
	text-align: center;
}

