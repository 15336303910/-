		function addPipe(){
			mui.openWindow("/pages/pipeLine/addPipeLine.html?");
		}
		//跳转到详情页面
		function getPipeDetail(id,type){
			//mui.alert(id+"==="+type); type 0 杆路  1  直埋  2 管道
			mui.openWindow("/pages/pipeLine/pipeLineDetail.html?pipeId='"+id+"'&pipeType='"+type+"'");
		}
		//得到参数
		function getQueryStr(str){
			var rs = new RegExp("(^|)" + str + "=([^&]*)(&|$)", "gi").exec(LocString), tmp; 
			if (tmp = rs) { 
				return tmp[2]; 
			} 
			return ""; 
		}
	</script>
